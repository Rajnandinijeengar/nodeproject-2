<div class="row">
    <div class="col-lg-1">

    </div>
    <div class="col-lg-10 mt-5 p-5"style="background-color: #e1eef2;">
<h2 style="font-size: 40px; color: #6fc0db; text-align: center;">ðŸ›’ Your Cart</h2>

    <% if (cartItems.length > 0) { %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th style="font-size: 20px; color: #6fc0db;">Product</th>
            <th style="font-size: 20px; color: #6fc0db;">Price (â‚¹)</th>
            <th style="font-size: 20px; color: #6fc0db;">Quantity</th>
            <th style="font-size: 20px; color: #6fc0db;">Subtotal (â‚¹)</th>
            <th style="font-size: 20px; color: #6fc0db;">Action</th>
          </tr>
        </thead>
        <tbody>
          <% cartItems.forEach(item => { %>
            <tr>
              <td><%= item.productId.name %></td>
              <td><%= item.productId.price %></td>
              <td>
                <form action="/cart/update/<%= item._id %>" method="POST" class="form-inline">
                  <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control mr-2" style="width:80px;">
                  <button type="submit" class="btn btn-primary btn-sm">Update</button>
                </form>
              </td>
              <td><%= item.productId.price * item.quantity %></td>
              <td>
                <a href="/cart/remove/<%= item._id %>" class="btn btn-danger btn-sm">Remove</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <div class="text-right">
        <h4>Total: â‚¹<%= total %></h4>
        <button class="btn btn-success">Proceed to Checkout</button>
      </div>
    <% } else { %>
      <p style="font-size: 20px; color: #6fc0db; text-align: center;">Your cart is empty.</p>
    <% } %>
    </div>
